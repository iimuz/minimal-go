{
  // editor設定で .editorconfig にて設定可能なパラメータは .editorconfig を利用する。
  // === editor
  "editor.detectIndentation": true,
  "editor.formatOnSave": true,
  // === workspace
  "workbench.colorCustomizations": {
    "titleBar.border": "#18aee9"
  },
  // === Extension: auto time stamp
  "lpubsppop01.autoTimeStamp.filenamePattern": ".md",
  "lpubsppop01.autoTimeStamp.lineLimit": 5,
  "lpubsppop01.autoTimeStamp.modifiedTimeStart": "lastmod: ",
  "lpubsppop01.autoTimeStamp.momentFormat": "YYYY-MM-DD",
  // === Language: go
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  // === Language: makefile
  "[makefile]": {},
  // === Language: markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
